# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pomodoro-timer
# For Docker setup with authentication:
# MONGODB_URI=mongodb://appuser:apppassword@localhost:27017/pomodoro-timer?authSource=admin

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_please_change_this

# Client URL
CLIENT_URL=http://localhost:3000

# Email Configuration (Optional)
EMAIL_HOST=your_smtp_host
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_REQUIRE_TLS=true
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=AI Pomo Free
EMAIL_ENABLED=false
CONTACT_EMAIL=your_contact_email@domain.com

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Backup Configuration (Optional)
ENABLE_AUTO_BACKUP=false
BACKUP_FREQUENCY=daily
MAX_BACKUPS=10
BACKUP_DIR=backups
